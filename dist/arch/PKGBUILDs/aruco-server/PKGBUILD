# Maintainer: Jeremy Laviole <laviole@rea.lity.tech>
pkgname=aruco-nectar-git
pkgver=r10.277f625
pkgrel=2
pkgdesc="ArUco for Natar - ArUco is a minimal library for Augmented Reality applications based exclusively on OpenCV"
arch=('x86_64')
url=""
# license=('GPL')
groups=(natar)
depends=('opencv' 'libnatar-redis-image-git')
makedepends=('cmake' 'git')
optdepends=('')
provides=("${pkgname%-git}")
conflicts=("${pkgname%-git}")
# provides=()
# conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=("${pkgname%-git}::git+ssh://git@forge.pole-aquinetic.net/nectar-platform/aruco-detection-server.git")
md5sums=('SKIP')

pkgver() {
	cd "$srcdir/${pkgname%-git}"
	printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}
build() {
  cd "$srcdir/${pkgname%-git}"  
  mkdir -p build ; cd build
  cmake -DCMAKE_INSTALL_PREFIX:PATH=/usr -DCMAKE_INSTALL_LIBDIR=lib ..
  make 
}

package() {
  cd "$srcdir/${pkgname%-git}/build"
  make DESTDIR="$pkgdir/" install
}
